<Window x:Class="WPF_BlurImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BlurImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="660">
    <Grid Name="g">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

    <Image Name="photo" Source="img.jpg"></Image>
        <Slider Grid.Row="1" VerticalAlignment="Center" Width="500" ValueChanged="MakeBlurry"></Slider>
    </Grid>
</Window>
